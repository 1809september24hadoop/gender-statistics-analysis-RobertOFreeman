package com.revature.femalegrad;

import java.io.IOException;

import org.apache.hadoop.io.DoubleWritable;
import org.apache.hadoop.io.Text;
import org.apache.hadoop.mapreduce.Reducer;

public class FemGradReducer extends Reducer <Text, Text, Text, DoubleWritable> {

	public void reduce(Text key, Text values, Context context)
			throws IOException, InterruptedException {
		String value = "";
		String entry = values.toString();
		String[] entries = entry.split(",");
		for(Integer iter = 0; iter < entries.length-1; iter++){
			if (entries[entries.length-iter] != "," ||entries[entries.length-iter] != null ){
				value = entries[entries.length-iter];
				break;
			}
			else{
				continue;
			}
		}
		if (entries[3].contains("primalry")){
			context.write(new Text(key+":HighSchool:"), new DoubleWritable(Double.parseDouble(value)));
		}
		else if(entries[3].contains("tertiary")){
			context.write(new Text(key+":College:"), new DoubleWritable(Double.parseDouble(value)));
		}
		
	}
}